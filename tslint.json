{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-console": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-unsafe-any": true,
    "arrow-parens": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
